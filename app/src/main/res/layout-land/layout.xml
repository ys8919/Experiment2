<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorButtonInitial"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginStart="300dp"
        android:layout_marginEnd="24dp"
        android:ellipsize="end"
        android:gravity="right"
        android:singleLine="true"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.88"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.592" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:gravity="right"
        android:singleLine="true"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toStartOf="@id/textView"
        app:layout_constraintHorizontal_bias="0.88"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.592" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="#3A3939"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.939" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="679dp"
        android:layout_height="278dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <Button
            android:id="@+id/buttonEmpty"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:background="@drawable/bg_btn_two"
            android:text="C"
            android:textColor="@color/colorText"
            android:textSize="30sp"
            app:layout_column="0"

            app:layout_row="0" />

        <Button
            android:id="@+id/buttonBackspace"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:background="@drawable/bg_btn_two"
            android:text="\u25C4"
            android:textColor="@color/colorText"
            android:textSize="40sp"
            app:layout_column="1"

            app:layout_row="0" />

        <Button
            android:id="@+id/buttonPer"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:background="@drawable/bg_btn_two"
            android:text="%"
            android:textColor="@color/colorText"
            android:textSize="30sp"
            app:layout_column="2"

            app:layout_row="0" />

        <Button
            android:id="@+id/buttonDiv"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:background="@drawable/bg_btn_two"
            android:text="÷"
            android:textColor="@color/colorText"
            android:textSize="30sp"
            app:layout_column="3"

            app:layout_row="0" />

        <Button
            android:id="@+id/button7"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:background="@drawable/bg_btn_two"
            android:text="7"
            android:textColor="@color/colorText1"
            android:textSize="30sp"

            app:layout_column="0"
            app:layout_row="1" />

        <Button
            android:id="@+id/button8"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:background="@drawable/bg_btn_two"
            android:text="8"
            android:textColor="@color/colorText1"
            android:textSize="30sp"

            app:layout_column="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/button9"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:background="@drawable/bg_btn_two"
            android:text="9"
            android:textColor="@color/colorText1"
            android:textSize="30sp"

            app:layout_column="2"
            app:layout_row="1" />

        <Button
            android:id="@+id/buttonMul"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:background="@drawable/bg_btn_two"
            android:text="×"
            android:textColor="@color/colorText"
            android:textSize="30sp"

            app:layout_column="3"
            app:layout_row="1" />

        <Button
            android:id="@+id/button4"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:background="@drawable/bg_btn_two"
            android:text="4"
            android:textColor="@color/colorText1"
            android:textSize="30sp"

            app:layout_column="0"
            app:layout_row="2" />

        <Button
            android:id="@+id/button5"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:background="@drawable/bg_btn_two"
            android:text="5"
            android:textColor="@color/colorText1"
            android:textSize="30sp"

            app:layout_column="1"
            app:layout_row="2" />

        <Button
            android:id="@+id/button6"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:background="@drawable/bg_btn_two"
            android:text="6"
            android:textColor="@color/colorText1"
            android:textSize="30sp"

            app:layout_column="2"
            app:layout_row="2" />

        <Button
            android:id="@+id/buttonSub"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:background="@drawable/bg_btn_two"
            android:text="—"
            android:textColor="@color/colorText"
            android:textSize="30sp"

            app:layout_column="3"
            app:layout_row="2" />

        <Button
            android:id="@+id/button1"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:background="@drawable/bg_btn_two"
            android:text="1"
            android:textColor="@color/colorText1"
            android:textSize="30sp"

            app:layout_column="0"
            app:layout_row="3" />

        <Button
            android:id="@+id/button2"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:background="@drawable/bg_btn_two"
            android:text="2"
            android:textColor="@color/colorText1"
            android:textSize="30sp"

            app:layout_column="1"
            app:layout_row="3" />

        <Button
            android:id="@+id/button3"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:background="@drawable/bg_btn_two"
            android:text="3"
            android:textColor="@color/colorText1"
            android:textSize="30sp"
            app:layout_column="2"

            app:layout_row="3" />

        <Button
            android:id="@+id/buttonAdd"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:background="@drawable/bg_btn_two"
            android:text="+"
            android:textColor="@color/colorText"
            android:textSize="30sp"

            app:layout_column="3"
            app:layout_row="3" />

        <Button
            android:id="@+id/buttonPoint"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:background="@drawable/bg_btn_two"
            android:text="."
            android:textColor="@color/colorText1"
            android:textSize="30sp"
            app:layout_column="2"

            app:layout_row="4" />

        <Button
            android:id="@+id/button0"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:background="@drawable/bg_btn_two"
            android:text="0"
            android:textColor="@color/colorText1"
            android:textSize="30sp"
            app:layout_column="1"

            app:layout_row="4" />

        <Button
            android:id="@+id/buttonEqual"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:background="@drawable/bg_btn_1"
            android:shape="oval"
            android:text="="
            android:textColor="@color/colorButtonInitial"
            android:textSize="30sp"

            app:layout_column="3"
            app:layout_row="4" />


    </androidx.gridlayout.widget.GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>